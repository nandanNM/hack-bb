{
  "name": "hach-2026-f-backend",
  "version": "1.0.0",
  "description": "This is the backend for Hach-2026-F, a learning platform",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "start": "node ./dist/index.js",
    "dev": "nodemon --exec tsx ./src/index.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "drizzle:push": "drizzle-kit push",
    "drizzle:migrate": "drizzle-kit migrate",
    "drizzle:generate": "drizzle-kit generate",
    "auth:generate": "npx @better-auth/cli generate --config=./src/utils/auth.ts",
    "seed:test": "tsx scripts/seed-test-data.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/careercafe-in/hach-2026-f-backend.git"
  },
  "keywords": [
    "Hach-2026-F"
  ],
  "author": "Career Cafe",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/careercafe-in/hach-2026-f-backend/issues"
  },
  "homepage": "https://github.com/careercafe-in/hach-2026-f-backend#readme",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "better-auth": "^1.4.17",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.45.1",
    "eslint-plugin-import": "^2.32.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-mailjet": "^6.0.11",
    "papaparse": "^5.5.3",
    "pg": "^8.17.2",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.1.0",
    "@types/papaparse": "^5.5.2",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
